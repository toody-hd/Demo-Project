<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:WPF.Styles">

    <!-- Main Window Title Bar -->
    <Style x:Key="TitleBar" TargetType="{x:Type Grid}">
        <Setter Property="Background">
            <Setter.Value>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#99F9FBFC" Offset="0.081"/>
                    <GradientStop Color="#99D3E6FC" Offset="0.202"/>
                    <GradientStop Color="#99CFE0FD" Offset="0.474"/>
                    <GradientStop Color="#99B4C5FF" Offset="0.481"/>
                    <GradientStop Color="#99B4CBFF" Offset="0.734"/>
                    <GradientStop Color="#99D0DFFD" Offset="0.906"/>
                </LinearGradientBrush>
            </Setter.Value>
        </Setter>
    </Style>
    
</ResourceDictionary>